<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable
            name="viewModelAkun"
            type="com.stp.maunyucibeta.ui.layanan.LayananViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:layout_margin="@dimen/margin_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ripple"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            android:padding="@dimen/margin_20">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_item_nama_layanan"
                style="@style/TextSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kiloan"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack_main"
                android:textSize="18sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_item_opsi_layanan"
                style="@style/TextBodyRegular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cuci >> Kering >> Setrika"
                android:layout_marginTop="@dimen/margin_5"
                android:textAlignment="textStart"
                android:textColor="@color/colorBlack_sub"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:layout_marginTop="@dimen/margin_15"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@color/colorWhite_darker"
                android:orientation="vertical" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_10"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_item_gambar_layanan"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/g_kiloan" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_item_jenis_layanan"
                        style="@style/TextSemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Regular"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack_main"
                        android:textSize="14sp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_item_harga_layanan"
                        style="@style/TextBodyRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 5.000/kg - 3 Hari"
                        android:textAlignment="textStart"
                        android:textColor="@color/colorBlack_sub"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>